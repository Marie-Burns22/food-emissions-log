<div class="container text-center">

  <h1 class="text-info">Foods list</h1>

  <form>
    <div class="form-row">
    <%= form_for(foods_path, method: "get") do %>
      <%= text_field_tag :'food[search]', 'Enter food to search for', size: 75 %>
    <% end %>
    </div>
  <form/>

  <div class="container-fluid">
    <div class="row header-fixed" id="column-headings">
      <div class="col-6 col-md-2 bg-secondary"><h4 class="text-light">Food</h4></div>
      <div class="col-6 col-md-2 bg-secondary"><h4 class="text-light">Category</h4></div>
      <div class="d-none d-md-inline col-md-8 bg-secondary border-0">
        <h4 class="text-light">Units</h4>
        <div class="row bg-light">
          <div class="col-md-3 bg-secondary border border-0">
            kg CO2e per lb of food
            <%= button_to("Sort", foods_path, :method => :get, params: { u:"kg CO2e per lb of food"}) %>
          </div>
          <div class="col-md-3 bg-secondary">
            lbs of CO2e per serving
            <%= button_to("Sort", foods_path, :method => :get, params: { u:"lbs of CO2e per serving"}) %>
          </div>
          <div class="col-md-3 bg-secondary">
            g of CO2e per serving
            <%= button_to("Sort", foods_path, :method => :get, params: { u:"g of CO2e per serving"}) %>
          </div>
          <div class="col-md-3 bg-secondary">
            kg of CO2 per 50 g of protein
            <%= button_to("Sort", foods_path, :method => :get, params: { u:"kg of CO2 per 50 g of protein"}) %>
          </div>
        </div> 
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row" id="data">
      <% @foods.each do |food| %>
        <div class="col-6 col-md-2">
          <%= link_to "#{food.name}", food_path(food) %>
        </div>
        <div class="col-6 col-md-2">
          <%= link_to "#{food.category}", emissions_path(:category => "#{food.category}") %>
        </div>
        <div class="d-none d-md-inline col-md-8">
            <div class="row">
              <div class="col-md-3">
                <%= food.unit_finder("kg CO2e per lb of food") %>
              </div>
              <div class="col-md-3">
                <%= food.unit_finder("lbs of CO2e per serving") %>
              </div>
              <div class="col-md-3">
                <%= food.unit_finder("g of CO2e per serving") %>
              </div>
              <div class="col-md-3">
                <%= food.unit_finder("kg of CO2 per 50 g of protein") %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
