<h1>Student Sign Up Page</h1>

<%= render partial: 'layouts/errors', locals: {object: @student} %> 

<%= form_for @student do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>

  <%= f.label :password %>:
  <%= f.password_field :password %><br>

  <%= f.label :email %>:
  <%= f.email_field :email %><br>

  <%= f.submit 'Create Student Account' %>
  <% end %>
